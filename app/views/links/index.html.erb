<p id="notice"><%= notice %></p>

<h1>Links</h1>

<% @links.each do |link| %>
  <div class="link row clearfix">
    <h2>
        <%= link_to link.title, link %>
        <small class="author"> Submitted <%= time_ago_in_words(link.created_at) %> by
        <%= link.user.email %></small>
    </h2>
  </div> 
<%end%> 
 

<br>

<% if user_signed_in? %>
  <%= link_to 'New Link', new_link_path %>
<% end %>
